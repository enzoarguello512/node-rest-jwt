{
  "name": "backend",
  "version": "0.1.0",
  "description": "backend",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node ./build/src/index.js",
    "build": "tsc",
    "development": "cross-env NODE_ENV=development DEBUG=* ts-node-dev --inspect --respawn --transpile-only --exit-child ./src/index.ts",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register './src/test/components/product/product.test.ts'",
    "testdebug": "cross-env NODE_ENV=test DEBUG=* mocha -r ts-node/register './src/test/components/product/product.test.ts'",
    "populate:db": "npm run build && node ./build/src/scripts/populate.mongoose.js",
    "rollback:db": "npm run build && node ./build/src/scripts/rollback.mongoose.js",
    "m2s": "npm run build && node ./build/src/scripts/m2s.js",
    "release": "standard-version",
    "pm2StartFork": "tsc && pm2 start ./build/index.js --name=$npm_config_name --watch",
    "pm2StartCluster": "tsc && pm2 start ./build/index.js --name=$npm_config_name --watch -i max",
    "pm2Stop": "pm2 stop all && pm2 delete all",
    "prof": "tsc && node --prof ./build/index.js"
  },
  "repository": {
    "type": "git",
